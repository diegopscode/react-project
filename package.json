{
	"name": "react-project",
	"version": "1.0.0",
	"description": "Starter React Project.",
	"keywords": [
		"react",
		"webpack",
		"babel",
		"sass",
		"hmr",
		"starter",
		"boilerplate"
	],
	"author": "Diego Pancera",
	"license": "MIT",
	"scripts": {
		"build": "npm run clean-dist && webpack -p --config=configs/webpack/prod",
		"clean-dist": "rm -f -r -d dist",
		"lint": "npm run lint:js && npm run lint:sass",
		"lint:js": "jshint",
		"lint:sass": "stylelint ./src/**/*.scss",
		"start": "npm run dev",
		"dev": "webpack-dev-server --config=configs/webpack/dev",
		"prod": "npm run build && node express.js",
		"test": "jest --watch --coverage --config=configs/jest.json"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-jest": "^22.4.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"babel-preset-env": "^1.6.1",
		"babel-preset-react": "^6.24.1",
		"css-loader": "^0.28.11",
		"express": "^4.16.3",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"identity-obj-proxy": "^3.0.0",
		"image-webpack-loader": "^4.2.0",
		"jest": "^22.4.3",
		"jshint": "^2.9.5",
		"node-sass": "^4.9.0",
		"postcss-loader": "^2.1.4",
		"react-addons-test-utils": "^15.6.2",
		"react-hot-loader": "^4.1.2",
		"sass-loader": "^7.0.1",
		"style-loader": "^0.21.0",
		"stylelint": "^9.2.0",
		"stylelint-config-standard": "^18.2.0",
		"stylelint-webpack-plugin": "^0.10.4",
		"webpack": "^4.7.0",
		"webpack-cli": "^2.1.2",
		"webpack-dev-middleware": "^3.1.3",
		"webpack-dev-server": "^3.1.4",
		"webpack-merge": "^4.1.2"
	},
	"dependencies": {
		"react": "^16.3.2",
		"react-dom": "^16.3.2"
	},
	"postcss": {}
}
